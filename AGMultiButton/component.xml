<?xml version="1.0" encoding="UTF-8"?>
<DesignerComponent>
  <Header>
    <Name>AG Multi Button</Name>
    <IName>AGMultiButton</IName>
    <Description>AG Multi Button Component</Description>
    <Category>AGCOMPONENTS</Category>
    <CatDescription>AG components</CatDescription>
    <Type>PalleteEntry</Type>
    <Version>1.0</Version>
  </Header>
  <Contents>
    <Model>
      <Property>parameter</Property>
      <Property>executeAtStart</Property>
      <Property>htmlObject</Property>
      <Property name="parameters">xActionArrayParameter</Property>
      <Definition name="queryDefinition">
        <Property>dataSource</Property>
      </Definition>
      <Property>valuesArray</Property>
      <Property>valueAsId</Property>
      <Property>preExecution</Property>
      <Property>postExecution</Property>
      <Property>postFetch</Property>
      <Property>preChange</Property>
      <Property>postChange</Property>
      <Property>tooltip</Property>
      <Property>listeners</Property>
      <Property>orientation</Property>
      <Property>size</Property>
      <Property>style</Property>
      <Property>buttonType</Property>
    </Model>
    <Implementation supportsLegacy="true" supportsAMD="true">
      <Code src="AGMultiButton.js"/>
      <Styles>
      </Styles>
      <Dependencies>
        <!-- <Dependency src="../resources/bootstrap/js/bootstrap.min.js" version="1.0">AGBootstrap</Dependency> -->
      </Dependencies>
      <CustomProperties>

        <DesignerProperty>
          <Header>
            <Name>orientation</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue>btn-group</DefaultValue>
            <Description>Orientation</Description>
            <Tooltip>Defines orientation of the buttons</Tooltip>
            <InputType type="valuelist"/>
            <OutputType>String</OutputType>
            <Order>55</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
          <Values>
            <Value display="Horizontal">btn-group</Value>
            <Value display="Vertical">btn-group-vertical</Value>
          </Values>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>size</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue>empty</DefaultValue>
            <Description>Size</Description>
            <Tooltip>Defines the size of the buttons</Tooltip>
            <InputType type="valuelist"/>
            <OutputType>String</OutputType>
            <Order>56</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
          <Values>
            <Value display="Default">empty</Value>
            <Value display="Large">btn-group-lg</Value>
            <Value display="Small">btn-group-sm</Value>
            <Value display="Mini">btn-group-xs</Value>
          </Values>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>style</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue>btn-default</DefaultValue>
            <Description>Style</Description>
            <Tooltip>Defines the style of the buttons</Tooltip>
            <InputType type="valuelist"/>
            <OutputType>String</OutputType>
            <Order>57</Order>
            <Advanced>true</Advanced>
            <Version>1.0</Version>
          </Header>
          <Values>
            <Value display="Default">btn-default</Value>
            <Value display="Primary">btn-primary</Value>
            <Value display="Success">btn-success</Value>
            <Value display="Info">btn-info</Value>
            <Value display="Warning">btn-warning</Value>
            <Value display="Danger">btn-danger</Value>
          </Values>
        </DesignerProperty>

        <DesignerProperty>
          <Header>
            <Name>buttonType</Name>
            <Parent>BaseProperty</Parent>
            <DefaultValue>radio</DefaultValue>
            <Description>Type</Description>
            <Tooltip>Defines the type of the buttons</Tooltip>
            <InputType type="valuelist"/>
            <OutputType>String</OutputType>
            <Order>58</Order>
            <Advanced>false</Advanced>
            <Version>1.0</Version>
          </Header>
          <Values>
            <Value display="Check Box">checkbox</Value>
            <Value display="Radio Button">radio</Value>
          </Values>
        </DesignerProperty>

      </CustomProperties>
    </Implementation>
  </Contents>
</DesignerComponent>
